<section class="price-wrapper">
  <div class="full-width-wrapper">
    
    {# Black background image behind everything #}
    <img src="{{ file_url(content.field_bg_image_1[0]['#item'].entity.uri.value) }}" alt="{{ content.field_bg_image_1[0]['#item'].value.alt }}" class="price-bg-image" />

    <div class="member-price">
      {# Top text and card #}
      <div class="top-section">
        <div class="text-content">
          <h4>{{ content.field_title.0 }}</h4>
          <p>{{ content.field_description.0 }}</p>
        </div>
        <div class="membership-image">
          <img src="{{ file_url(content.field_image[0]['#item'].entity.uri.value) }}" alt="{{ content.field_image[0]['#item'].value.alt }}" class="membership-card-image"/>
        </div>
      </div>
      

      {# Bottom badge and description #}
      <div class="bottom-section">
        <div class="bottom-left">
          {{ content.field_image_3 }}
        </div>
        <div class="bottom-right">
          {{ content.field_description_1 }}
        </div>
      </div>
    </div>
  </div>
</section>
